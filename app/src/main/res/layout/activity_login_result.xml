<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/login_success"
            android:id="@+id/imageView2"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="-16dp" android:layout_gravity="center_horizontal"/>

    <TextView
            android:text="恭喜您，登录成功！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"
            android:textSize="20dp" android:textColor="#009688"/>
</LinearLayout>